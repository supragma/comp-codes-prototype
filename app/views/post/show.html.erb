<h1>Your Job</h1>

Name:<%= @job.name %> <br>
<%= @job.description %> 
<br>
Show image thumbnails here
<% @job.files.each do |file| %>
    <li>
      <a href="<%= url_for(file) %>"><%= image_tag(file, style: 'height:100px;width:auto;') %></a>
    </li>
<% end %>
<br>
Upload pictures here

<%= form_with(multiple: true, method: 'post', url: '/post/images/' + @job.id.to_s, local: true) do |form| %>
  <div class="field">
    <%= form.label :documents %>
    <%= form.file_field :documents, multiple: true, direct_upload: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
